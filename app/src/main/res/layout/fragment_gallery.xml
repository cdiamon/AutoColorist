<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/colorBackground"
    android:padding="0dp"
    tools:context="com.cdiamon.autocolorist.fragments.GalleryFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageViewCarCollage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/carlogocollage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewCarCollage"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="21dp"
        android:text="@string/fragmentGalleryDescription"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/fragmentGallerySource"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragm_button_go"
        android:layout_centerVertical="true"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="18dp"
        android:text="@string/fragmentGalleryRecommend"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="22sp" />

    <Button
        android:id="@+id/fragm_button_go"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="16dp"
        android:padding="0dp"
        android:text="@string/fragmentGalleryButtonGo"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

</RelativeLayout>